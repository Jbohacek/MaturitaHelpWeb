@{
    Layout = null;

    

}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />


</head>
<body>
<section class="container">
    <div class="d-flex justify-content-center">
        <h1 class="display-4">Why are you sleeping?</h1>

    </div>
    <div class="d-flex justify-content-around mt-4 flex-row">
        <div>
            <h3 class="display-5">Jakub</h3>
            <p class="display-6 text-center">@ViewBag.Jakub</p>
            <div class="d-flex justify-content-around gap-3">
                <a class="btn btn-outline-success" asp-action="ChangeScore" asp-route-addMinus="false" asp-route-who="true" style="width: 3rem"><i class="bi bi-plus"></i></a>
                <a class="btn btn-outline-danger px-3" style="width: 3rem" asp-action="ChangeScore" asp-route-addMinus="true" asp-route-who="true"><i class="bi bi-dash"></i></a>
            </div>
        </div>
        <div class="">
            <h3 class="display-5 text-center">Kamila</h3>
            <p class="display-6 text-center">@ViewBag.Kamila</p>
            <div class="d-flex justify-content-around gap-3">
                    <a class="btn btn-outline-success" asp-action="ChangeScore" asp-route-addMinus="false" asp-route-who="false" style="width: 3rem"><i class="bi bi-plus"></i></a>
                    <a class="btn btn-outline-danger px-3" style="width: 3rem" asp-action="ChangeScore" asp-route-addMinus="true" asp-route-who="false"><i class="bi bi-dash"></i></a>

            </div>
        </div>
    </div>

</section>


<script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

</body>
</html>

