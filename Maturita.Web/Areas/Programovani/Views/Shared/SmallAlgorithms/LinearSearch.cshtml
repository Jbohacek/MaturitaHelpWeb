    static int LinearSearch(int[] arr, int target)
    {
        for (int i = 0; i < arr.Length; i++)
        {
            if (arr[i] == target)
            {
                return i; // Vrací číslo indexu pokud je nalezen
            }
        }
        return -1; // Vrací -1 pokud není nalezen
    }
